{
    "app-id": "com.github.skylot.jadx",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk11"
    ],
    "command": "jadx-gui",
    "build-options":{
        "build-args": [
            "--share=network"
        ]
    },
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--env=PATH=/app/bin:/app/jre/bin:/usr/bin",
        "--env=JAVA_HOME=/app/jre"
    ],
    "env": {
        "PATH": "/app/bin:/app/jre/bin:/usr/bin",
        "JAVA_HOME": "/app/jre"
    },
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk11/install.sh"
            ]
        },
        {
            "name": "jadx",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/skylot/jadx.git",
                    "tag": "v1.3.4",
                    "commit": "d2bef108f51d96665a7cadb7923a99e71cf35c26",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$",
                        "is-main-source": true
                    }
                },
                {
                    "type": "file",
                    "path": "jadx.desktop"
                }
            ],
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "PATH":"/app/bin:/usr/lib/sdk/openjdk11/bin:/usr/bin",
                    "JAVA_HOME":"/usr/lib/sdk/openjdk11/jvm/openjdk-11"
                }
            },
            "build-commands": [
                "/usr/lib/sdk/openjdk11/enable.sh",
                "gradle dist",
                "cd build/jadx/ && install -Dm 755 bin/{jadx,jadx-gui} -t ${FLATPAK_DEST}/share/java/jadx/bin",
                "cd build/jadx/ && install -Dm 644 lib/* -t ${FLATPAK_DEST}/share/java/jadx/lib",
                "install -d ${FLATPAK_DEST}/bin",
                "ln -s ${FLATPAK_DEST}/share/java/jadx/bin/jadx ${FLATPAK_DEST}/bin/jadx",
                "ln -s ${FLATPAK_DEST}/share/java/jadx/bin/jadx-gui ${FLATPAK_DEST}/bin/jadx-gui",
                "install -Dm 644 -t $FLATPAK_DEST/share/licenses/jadx LICENSE",
                "install -D jadx-gui/src/main/resources/logos/jadx-logo.png ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg",
                "install -Dm 644 jadx.desktop $FLATPAK_DEST/share/applications/${FLATPAK_ID}.desktop"
            ]
        }
    ]
}